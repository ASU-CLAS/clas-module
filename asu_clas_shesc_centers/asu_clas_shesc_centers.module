/**
 * Implements hook_preprocess_html().
 */
function asu_clas_shesc_centers_preprocess_html(&$variables) {
  drupal_add_css(drupal_get_path('module', 'asu_clas_shesc_centers') . '/css/asu-clas-shesc-centers.css', array('group' => CSS_THEME, 'weight' => '99'));
}

/**
 * Implements hook_views_api().
 */
function asu_clas_shesc_centers_views_api() {
  return array(
    'api' => 3,
    'path' => drupal_get_path('module', 'asu_clas_shesc_centers'),
    'template path' => drupal_get_path('module', 'asu_clas_shesc_centers') . '/templates',
  );
}

/**
 * Implements hook_ctools_plugin_api().
 */
function asu_clas_shesc_centers_ctools_plugin_api($module, $api) {
  if ($module == 'panelizer' && $api == 'panelizer') {
    return array('version' => 1);
  }
  if ($module == 'page_manager' && $api == 'pages_default') {
    return array('version' => 1);
  }
}

/**
 * Helper function to include Views exports.
 */
function asu_clas_shesc_centers_views_default_views() {
  $files = file_scan_directory(drupal_get_path('module', 'asu_clas_shesc_centers') . '/views', '/.*\.inc$/');

  foreach ($files as $filepath => $file) {
    require $filepath;

    if (isset($view)) {
      $views[$view->name] = $view;
    }
  }

  return $views;
}
